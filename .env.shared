# Shared Discord Bot Configuration
# Copy this to each bot folder as .env or symlink it

# Discord Bot Tokens (one per bot)
DISCORD_TOKEN_SPELLING=your_spelling_bot_token_here
DISCORD_TOKEN_HANGMAN=your_hangman_bot_token_here
DISCORD_TOKEN_GRAMMAR=your_grammar_bot_token_here

# Discord Application IDs
CLIENT_ID_SPELLING=your_spelling_bot_client_id
CLIENT_ID_HANGMAN=your_hangman_bot_client_id
CLIENT_ID_GRAMMAR=your_grammar_bot_client_id

# Shared OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Test Server (optional - for faster command deployment during dev)
GUILD_ID=your_test_guild_id_here

# MongoDB Configuration (optional - uses JSON if not set)
MONGODB_URI=mongodb://localhost:27017/discord-bots

# Environment
NODE_ENV=development
